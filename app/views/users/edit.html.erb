<% provide(:title, "編輯用戶") %>
<h1>編輯用戶</h1>
<div class="row">
  <div class="span4">
    <%= form_for @user, html: { class: "form-horizontal" } do |f| %>
    <div class="control-group">
      <%= f.label "大頭貼", class: "control-label" %>
      <div class="controls">
        <%= gravatar_for @user, size: 100 %>
        <!-- <a href="http://gravatar.com/emails" class="btn"><i class="icon-pencil"></i></a> -->
      </div>
    </div>
    <div class="control-group">
      <%= f.label :name, "名字", class: "control-label" %>
      <div class="controls">
        <%= f.text_field :name, placeholder: "例如：Baozi Wu" %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :email, "信箱", class: "control-label" %>
      <div class="controls">
        <%= f.text_field :email, placeholder: "例如：baozi@example.com" %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :password, "密碼", class: "control-label" %>
      <div class="controls">
        <%= f.password_field :password, placeholder: "例如：aBc123456" %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :password_confirmation, "確認密碼", class: "control-label" %>
      <div class="controls">
        <%= f.password_field :password_confirmation %>
      </div>
    </div>

    <div class="control-group">
      <div>
        <%= f.submit "儲存", class: "btn btn-success" %>
      </div>
    </div>

    <% end %>
  </div>


  <% if @user.errors.full_messages.any? %>
  <div class="span4">
    <div class="span6 alert-error">

          <ul>

            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
    </div>
  </div>
  <% end %>
</div>